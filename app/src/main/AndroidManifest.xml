<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <application
        android:allowBackup="true"
        android:label="JStreamV2"
        android:supportsRtl="true"
        android:theme="@style/Theme.JStreamV2">
        <activity 
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Deep Link: Movie Detail -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="jstream" android:host="movie" android:pathPattern="/.*" />
            </intent-filter>
            <!-- Deep Link: TV Show Detail -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="jstream" android:host="tv" android:pathPattern="/.*" />
            </intent-filter>
            <!-- Deep Link: Person Detail -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="jstream" android:host="person" android:pathPattern="/.*" />
            </intent-filter>
            <!-- Deep Link: Genre Browse -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="jstream" android:host="genre" android:pathPattern="/.*" />
            </intent-filter>
        </activity>
    </application>
</manifest>
